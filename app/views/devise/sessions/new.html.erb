
<main id="page-content" class="wrap container">
<div id="banner" class="custom-padding jumbotron row"></div>
<section class="page-section row col-split-2">
  <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-1">
    <form data-ajax-handler="shop:onLogin" data-validation-message="" method="post" action="">
      <h2>Sign In</h2>

<div class="row">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                     <div class="col-xs-12 form-group">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" value="">
                        <label for="email">Email</label>
                     </div>
                     <div class="col-xs-12 form-group">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        <label for="password">Password</label>
                     </div>

        <% if devise_mapping.rememberable? -%>
          <div class="col-xs-12 form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

                     <div class="col-xs-12 form-group clearfix">
                        <a class="btn btn-default forget-link pull-left" href="javascript:;">forgot your password?</a>
                        <button class="btn btn-primary pull-right" type="submit">Log In <i class="fa fa-lock"></i></button>
                        <input type="hidden" name="redirect" value="">
                     </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </form>

    </div>

  </div>
</section>


  </main>