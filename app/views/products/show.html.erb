<main id="page-content" class="wrap container">
    <div itemscope="" itemtype="http://schema.org/Product">
		<div id="banner" class="jumbotron row">
			<h1 itemprop="name"><%=@product.title %></h1>
		</div>
		<section id="single-product" class="page-section">
			<ol class="breadcrumb">
  				<li class="hidden-xs"><%= link_to 'Products' , home_index_url %></li>
				<li><%= link_to @product.type , products_type_path(@product.type.downcase.pluralize) %></li>
				<li class="active"><a href="javascript:;"><%=@product.title %></a></li>
  			</ol>
			<div class="custom">
				<div class="row">
					<div id="product-images">
						<div class="col-xs-12 col-sm-6">
							<div id="product-gallery" class="carousel slide" data-ride="carousel" data-interval="false">
								<div class="carousel-inner">
									<div class="item active" id="slide2">
										<div data-lg="img/OrangeHeadphones_400x300-jpg-keep-ratio.png" class="product-img-zoom" style="position: relative; overflow: hidden;">
											<img class="img-responsive" alt="" src="<%=@product.image %>" itemprop="image">
											<img src="<%= @product.image %>" class="zoomImg" style="position: absolute; top: -34.0744px; left: -421.533px; width: 1270px; height: 1270px; border: none; max-width: none; max-height: none; opacity: 0;">
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="modal fade" id="img-modal" tabindex="-1" role="dialog" aria-labelledby="img-modalLabel" aria-hidden="true">
  							<div class="modal-dialog modal-xl">
    							<div class="modal-content">
      								<div class="modal-header">
        								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      								</div>
      								<div class="modal-body">
        								<img class="img-responsive">
      								</div>
    							</div>
  							</div>
						</div>
					</div>
					<div id="product-page">
						<div class="col-sm-6">
							<div class="price" itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
								<h2 itemprop="price">$<%= @product.price %></h2>
								<link itemprop="availability" href="http://schema.org/InStock">
							</div>	
							<div class="excerpt" itemprop="description">
								<p>Why have black headphones when you can have Blue?</p>
							</div>
							<input type="hidden" name="productId" value="6">
							<form action="<%= cart_path %>" class="add-cart-holder form-group" method="get" >
								<div class="quantity-selector">
									<button class="quantity-btn minus btn btn-lg btn-default"><i class="fa fa-minus"></i></button>
									<input type="hidden" value="<%=@product.id%>" name="product_id">
									<input id="txtAcrescimo" class="form-control quantity" type="text" value="1" name="quantity">
									<button class="quantity-btn plus btn btn-lg btn-default"><i class="fa fa-plus"></i></button>
								</div>
								<input type="submit" value="Add to Cart" class= "btn btn-danger btn-add-cart"/>
							</form>				
							<div id="sharrre" class="social-buttons">
								<h6 class="share-title">share with your friends</h6>
								<ul class="inline list-inline square-icons">
									<li class="facebook sharrre"><a href="#" rel="tooltip" title="" data-original-title="Facebook: 0"><i class="fa fa-facebook"></i></a></li>
									<li class="twitter sharrre"><a href="#"><i class="fa fa-twitter"></i></a></li>
									<li class="pinterest sharrre"><a href="#" rel="tooltip" title="" data-original-title="Pinterest: 0"><i class="fa fa-pinterest"></i></a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- review -->
			<div  class="review-box row">
				<form class="" method="post" data-remote="true" action="<%= reviews_path %>">
					<div class="container">
						<div class="col-md-9 col-sm-9 col-xs-9">
							<textarea class="form-control" rows="2" name="comment"></textarea>
							<textarea class="form-control" rows="2" name="rate" id="rate_field"></textarea>
							<input type="hidden" value="<%=@product.id%>" name="product_id">
						</div>
						<div class="col-md-3 col-sm-3 col-xs-3 text-center">
							<button type="submit" class="btn btn-primary btn-lg btn-block">Add Review!</button>
							<div class="stars">
								<i class="fa fa-star-o" aria-hidden="true"></i>
								<i class="fa fa-star-o" aria-hidden="true"></i>
								<i class="fa fa-star-o" aria-hidden="true"></i>
								<i class="fa fa-star-o" aria-hidden="true"></i>
								<i class="fa fa-star-o" aria-hidden="true"></i>
							</div>
							<div id="rateYo"></div>
						</div>
					</div>
				</form>
				<h1 class="review-header text-center" >REVIEWS</h1>
				<div class="list-group">
					<% @reviews.each do |r| %>
						<%= render 'review', {:review => r} %>
					<% end %>
				</div>
			</div>
			<!-- end review  -->
		</section>
	</div>	
</main>